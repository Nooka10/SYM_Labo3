<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".QRCode.QRCodeActivity"
	>

	<Button
		android:id = "@+id/qrcode_activity_scan_qrcode_button"
		android:text = "@string/qrcode_activity_scan_qrcode_button"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "8dp"
		android:layout_marginBottom = "8dp"
		android:layout_marginStart = "8dp"
		android:layout_marginEnd = "8dp"
		app:layout_constraintTop_toTopOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintBottom_toTopOf = "@+id/qrcode_activity_title_textview"
		/>

	<TextView
		android:id = "@+id/qrcode_activity_title_textview"
		android:text = "@string/qrcode_activity_title"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginBottom = "8dp"
		android:layout_marginTop = "8dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintBottom_toTopOf = "@+id/qrcode_activity_previous_qrcode_textview"
		app:layout_constraintTop_toBottomOf = "@+id/qrcode_activity_scan_qrcode_button"
		/>


	<TextView
		android:id = "@+id/qrcode_activity_previous_qrcode_textview"
		android:layout_width = "0dp"
		android:layout_height = "0dp"
		android:layout_marginStart = "8dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginTop = "8dp"
		android:scrollbars = "vertical"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/qrcode_activity_title_textview"
		app:layout_constraintBottom_toBottomOf = "parent"
		/>
</android.support.constraint.ConstraintLayout>