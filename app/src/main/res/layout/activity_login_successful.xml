<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	app:layout_behavior = "@string/appbar_scrolling_view_behavior"
	tools:showIn = "@layout/activity_login_successful"
	tools:context = ".NFC.LoginSuccessfulActivity"
	>

	<TextView
		android:id = "@+id/activity_login_successful_textView"
		android:text = "@string/login_successful_activity_current_security_level_label"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginEnd = "8dp"
		android:layout_marginStart = "8dp"
		android:layout_marginBottom = "8dp"
		android:layout_marginTop = "16dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintBottom_toTopOf = "@+id/activity_login_successful_security_level_progressBar"
		app:layout_constraintTop_toTopOf = "parent"
		app:layout_constraintVertical_chainStyle = "spread_inside"
		/>

	<ProgressBar
		android:id = "@+id/activity_login_successful_security_level_progressBar"
		style = "@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:layout_width = "0dp"
		android:layout_height = "33dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginStart = "8dp"
		android:layout_marginBottom = "8dp"
		android:layout_marginTop = "8dp"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintBottom_toTopOf = "@+id/activity_login_successful_max_security_level"
		app:layout_constraintTop_toBottomOf = "@+id/activity_login_successful_textView"
		/>

	<Button
		android:id = "@+id/activity_login_successful_max_security_level"
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		android:layout_marginLeft = "16dp"
		android:layout_marginRight = "16dp"
		android:layout_marginTop = "8dp"
		android:layout_marginBottom = "8dp"
		android:text = "@string/login_successful_activity_max_security_level"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintBottom_toTopOf = "@+id/activity_login_successful_medium_security_level"
		app:layout_constraintTop_toBottomOf = "@+id/activity_login_successful_security_level_progressBar"
		/>

	<Button
		android:id = "@+id/activity_login_successful_medium_security_level"
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		android:layout_marginLeft = "16dp"
		android:layout_marginRight = "16dp"
		android:layout_marginTop = "8dp"
		android:layout_marginBottom = "8dp"
		android:text = "@string/login_successful_activity_medium_security_level"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/activity_login_successful_max_security_level"
		app:layout_constraintBottom_toTopOf = "@+id/activity_login_successful_low_security_level"
		/>

	<Button
		android:id = "@+id/activity_login_successful_low_security_level"
		android:layout_width = "match_parent"
		android:layout_height = "0dp"
		android:layout_marginLeft = "16dp"
		android:layout_marginRight = "16dp"
		android:layout_marginTop = "8dp"
		android:layout_marginBottom = "16dp"
		android:text = "@string/login_successful_activity_low_security_level"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintRight_toRightOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/activity_login_successful_medium_security_level"
		app:layout_constraintBottom_toBottomOf = "parent"
		/>
</android.support.constraint.ConstraintLayout>
